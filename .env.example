# ===========================================
# FreezeMotions Configuration Template
# ===========================================

# Domain & URLs
DOMAIN=localhost
ANALYTICS_DOMAIN=analytics.localhost
FRONTEND_PORT=3000
BACKEND_PORT=3001

# Environment
NODE_ENV=production

# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_NAME=freezemotions
DB_USER=freezemotions
DB_PASSWORD=auto_generated_secure_password
DB_ROOT_PASSWORD=auto_generated_root_password

# SMTP Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=your-email@gmail.com
SMTP_SECURE=false

# FTP Configuration
FTP_USER=photographer
FTP_PASS=auto_generated_ftp_password
FTP_PORT=21

# Matomo Analytics
MATOMO_URL=http://localhost:8081
MATOMO_SITE_ID=1
MATOMO_DB_PASSWORD=auto_generated_matomo_password
MATOMO_DB_ROOT_PASSWORD=auto_generated_matomo_root_password

# Storage Configuration
STORAGE_PATH=./storage

# Security & Authentication
JWT_SECRET=auto_generated_jwt_secret_32_chars_minimum
SESSION_SECRET=auto_generated_session_secret
BCRYPT_ROUNDS=12

# Application Settings
LOG_LEVEL=info
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp,raw,cr2,nef,arw

# SSL/TLS Settings (Production)
LETSENCRYPT_EMAIL=admin@your-domain.de
CERTBOT_STAGING=false

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Development Settings
DEBUG=false
VERBOSE_LOGGING=false
